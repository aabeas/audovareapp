<div class="row-fluid">
  <div class="col-md-offset-6 col-lg-3 well">
    <h2>Log In</h2>
    <%= form_tag '/login' do %>
      <div class="form-group">
        <%= text_field_tag :username, nil, placeholder: 'Username', class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= text_field_tag :email, nil, placeholder: 'Email', class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= password_field_tag :password, nil, placeholder: 'Password', class: 'form-control' %>
      </div>
      <%= submit_tag 'Login', class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
