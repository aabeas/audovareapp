<div class="row-fluid">
  <div class="col-md-offset-6 col-lg-3 well">
    <%= form_tag '/login' do %>
      <div class="form-group">
        <%= label_tag :username %>
        <%= text_field_tag :username, nil, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= label_tag :email %>
        <%= text_field_tag :email, nil, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= label_tag :password %>
        <%= password_field_tag :password, nil, class: 'form-control' %>
      </div>
      <%= submit_tag 'Login', class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
